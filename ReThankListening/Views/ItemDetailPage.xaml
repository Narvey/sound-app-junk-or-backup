<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReThankListening.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Entry Text="{Binding Item.Text}" FontSize="Small" />
        <Label Text="Description" FontSize="Medium" />
        <Editor Text="{Binding Item.Description}" FontSize="Small" Margin="0" />
        <!--<Menu>
            <MenuItem Text="Direct Download Link" Clicked="SetType_DirectDownload" />
            <MenuItem Text="Local File/Folder" Clicked="SetType_Local" />
        </Menu>-->
    </StackLayout>
</ContentPage>